<script>
let noSize = 20;

function yesClicked() {
    document.body.innerHTML = `
    <div style="font-size:70px;">ğŸ§¸ğŸ’–ğŸ˜º</div>
    <h1 style='color:white;'>Waaaooo ğŸ˜ğŸ’–<br>I won in my life ğŸ¥³ğŸ’•<br>You are my forever Valentine ğŸ’˜</h1>
    `;
    confettiEffect();
}

function moveButton() {
    var button = document.getElementById("noBtn");
    var x = Math.random() * (window.innerWidth - 100);
    var y = Math.random() * (window.innerHeight - 50);
    button.style.left = x + "px";
    button.style.top = y + "px";

    if(noSize > 8){
        noSize -= 1;
        button.style.fontSize = noSize + "px";
    }
}

function createHeart() {
    const heart = document.createElement("div");
    heart.classList.add("heart");
    heart.innerHTML = "ğŸ’–";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.fontSize = Math.random() * 20 + 10 + "px";
    document.body.appendChild(heart);
    setTimeout(() => heart.remove(), 5000);
}

function createBalloon() {
    const balloon = document.createElement("div");
    balloon.classList.add("balloon");
    balloon.innerHTML = "ğŸˆ";
    balloon.style.left = Math.random() * 100 + "vw";
    balloon.style.fontSize = "30px";
    document.body.appendChild(balloon);
    setTimeout(() => balloon.remove(), 6000);
}

setInterval(createHeart, 300);
setInterval(createBalloon, 800);

function confettiEffect() {
    for (let i = 0; i < 80; i++) {
        let confetti = document.createElement("div");
        confetti.innerHTML = "âœ¨";
        confetti.style.position = "fixed";
        confetti.style.left = Math.random() * 100 + "vw";
        confetti.style.top = Math.random() * 100 + "vh";
        confetti.style.fontSize = "20px";
        document.body.appendChild(confetti);
    }
}
